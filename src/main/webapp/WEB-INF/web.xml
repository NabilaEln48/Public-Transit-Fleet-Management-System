<?xml version="1.0" encoding="UTF-8"?>
<web-app version="3.1" xmlns="http://xmlns.jcp.org/xml/ns/javaee" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_3_1.xsd">

    <!-- Welcome File List -->
    <welcome-file-list>
        <welcome-file>register.jsp</welcome-file>
    </welcome-file-list>

    <!-- ==================================================================== -->
    <!--                         SERVLET DEFINITIONS                          -->
    <!--      All <servlet> elements must come before all <servlet-mapping>   -->
    <!-- ==================================================================== -->

    <servlet>
        <servlet-name>FrontendController</servlet-name>
        <servlet-class>ZhiruXie.ControllerLayer.FrontendController</servlet-class>
    </servlet>

    <servlet>
        <servlet-name>LoginServlet</servlet-name>
        <servlet-class>com.group.project.nabila.msiah.ViewLayer.LoginServlet</servlet-class>
    </servlet>

    <servlet>
        <servlet-name>ReportDashboardServlet</servlet-name>
        <servlet-class>ZhiruXie.ViewLayer.ReportDashboardServlet</servlet-class>
    </servlet>

    <servlet>
        <servlet-name>CostReportServlet</servlet-name>
        <servlet-class>ZhiruXie.ViewLayer.CostReportServlet</servlet-class>
    </servlet>

    <servlet>
        <servlet-name>MaintenanceDashboardServlet</servlet-name>
        <servlet-class>ZhiruXie.ViewLayer.MaintenanceDashboardServlet</servlet-class>
    </servlet>

    <servlet>
        <servlet-name>PerformanceDashboardServlet</servlet-name>
        <servlet-class>ZhiruXie.ViewLayer.PerformanceDashboardServlet</servlet-class>
    </servlet>
    
    <!-- Corrected: GPSLogServlet (assuming class is ZhiruXie.ViewLayer.GPSLogServlet) -->
    <servlet>
        <servlet-name>GPSLogServlet</servlet-name>
        <servlet-class>ZhiruXie.ViewLayer.GPSLogServlet</servlet-class>
    </servlet>

    <!-- Main GPSTrackingServlet (from your provided code) -->
    <servlet>
        <servlet-name>GPSTrackingServlet</servlet-name>
        <servlet-class>ZhiruXie.ViewLayer.GPSTrackingServlet</servlet-class>
    </servlet>

    <!-- Vehicle Management Servlets (Ensure these Java classes exist and do NOT have @WebServlet annotations, as they are defined here) -->
    <servlet>
        <servlet-name>DeleteVehicleServlet</servlet-name>
        <servlet-class>ZhiruXie.ViewLayer.DeleteVehicleServlet</servlet-class>
    </servlet>
    
    <servlet>
        <servlet-name>UpdateVehicleServlet</servlet-name>
        <servlet-class>ZhiruXie.ViewLayer.UpdateVehicleServlet</servlet-class>
    </servlet>
    
    <servlet>
        <servlet-name>GetVehicleServlet</servlet-name>
        <servlet-class>ZhiruXie.ViewLayer.GetVehicleServlet</servlet-class>
    </servlet>
    
    <servlet>
        <servlet-name>VehicleManagementServlet</servlet-name>
        <servlet-class>ZhiruXie.ViewLayer.VehicleManagementServlet</servlet-class>
    </servlet>

    <!-- ==================================================================== -->
    <!--                         SERVLET MAPPINGS                             -->
    <!-- ==================================================================== -->

    <servlet-mapping>
        <servlet-name>FrontendController</servlet-name>
        <url-pattern>/FrontendController</url-pattern>
    </servlet-mapping>

    <servlet-mapping>
        <servlet-name>LoginServlet</servlet-name>
        <url-pattern>/login</url-pattern>
        <url-pattern>/logout</url-pattern>
    </servlet-mapping>

    <servlet-mapping>
        <servlet-name>ReportDashboardServlet</servlet-name>
        <url-pattern>/ReportDashboard</url-pattern>
    </servlet-mapping>

    <servlet-mapping>
        <servlet-name>CostReportServlet</servlet-name>
        <url-pattern>/CostReports</url-pattern>
    </servlet-mapping>

    <servlet-mapping>
        <servlet-name>MaintenanceDashboardServlet</servlet-name>
        <url-pattern>/MaintenanceDashboard</url-pattern>
    </servlet-mapping>

    <servlet-mapping>
        <servlet-name>PerformanceDashboardServlet</servlet-name>
        <url-pattern>/PerformanceDashboard</url-pattern>
    </servlet-mapping>
    
    <!-- Corrected: GPSLogServlet mapping -->
    <servlet-mapping>
        <servlet-name>GPSLogServlet</servlet-name>
        <url-pattern>/GPSLogServlet</url-pattern>
    </servlet-mapping>

    <!-- Corrected: GPSTrackingServlet mapping -->
    <servlet-mapping>
        <servlet-name>GPSTrackingServlet</servlet-name>
        <url-pattern>/GPSTrackingServlet</url-pattern>
    </servlet-mapping>

    <!-- Vehicle Management Servlet Mappings -->
    <servlet-mapping>
        <servlet-name>DeleteVehicleServlet</servlet-name>
        <url-pattern>/DeleteVehicleServlet</url-pattern>
    </servlet-mapping>
    
    <servlet-mapping>
        <servlet-name>UpdateVehicleServlet</servlet-name>
        <url-pattern>/UpdateVehicleServlet</url-pattern>
    </servlet-mapping>
    
    <servlet-mapping>
        <servlet-name>GetVehicleServlet</servlet-name>
        <url-pattern>/GetVehicleServlet</url-pattern>
    </servlet-mapping>
    
    <servlet-mapping>
        <servlet-name>VehicleManagementServlet</servlet-name>
        <url-pattern>/VehicleManagementServlet</url-pattern>
    </servlet-mapping>

</web-app>